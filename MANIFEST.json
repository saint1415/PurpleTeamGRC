{
  "name": "Purple Team Portable",
  "version": "4.0.0",
  "description": "Portable GRC and Security Assessment Platform for Purple Team Operations",
  "created": "2026-01-28",
  "author": "Purple Team Portable Project",
  "license": "Internal Use",

  "structure": {
    "bin/": "Executable launchers and scheduler",
    "lib/": "Core Python libraries (paths, config, evidence, compliance, network, logger)",
    "scanners/": "Security scanner modules (network, vulnerability, web, SSL, compliance)",
    "utilities/": "Orchestrator, reporter, exporter, audit report generator",
    "config/active/": "Active configuration file (365-day retention)",
    "config/templates/": "Industry-specific configuration templates",
    "data/results/": "Scan results organized by session",
    "data/evidence/": "SQLite evidence database with compliance mappings",
    "data/logs/": "Execution logs (365-day retention)",
    "data/reports/": "Generated reports (HTML, JSON, CSV, PDF)",
    "data/archives/": "Compressed historical data",
    "docs/": "Documentation and guides",
    "tools/": "Bundled external tools (optional)",
    "venv/": "Python virtual environment"
  },

  "compliance_frameworks": [
    "NIST 800-53 Rev. 5",
    "HIPAA Security Rule",
    "SOC 1 Type II (SSAE 18)",
    "SOC 2 Type II",
    "PCI-DSS v4.0",
    "ISO/IEC 27001:2022",
    "CMMC",
    "FedRAMP",
    "GDPR",
    "SOX"
  ],

  "export_formats": [
    "HTML - Human-readable reports",
    "JSON - Raw data for API/programmatic access",
    "CSV - Spreadsheet import, GRC platform import",
    "OSCAL - Federal compliance standard (NIST)",
    "Platform-specific - Drata, Vanta compatible"
  ],

  "required_tools": {
    "nmap": "Network discovery and port scanning",
    "nikto": "Web application vulnerability scanning",
    "nuclei": "Template-based vulnerability detection",
    "testssl.sh": "SSL/TLS configuration assessment"
  },

  "retention": {
    "results": "365 days",
    "logs": "365 days",
    "evidence": "365 days",
    "compression": "After 30 days"
  },

  "usage": {
    "setup": "./setup.sh",
    "run": "bin/purple-team",
    "quick_scan": "bin/purple-team quick",
    "schedule": "bin/purple-team schedule"
  }
}
