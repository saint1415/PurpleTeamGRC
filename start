#!/usr/bin/env bash
#
# Purple Team Platform - Quick Start
# Just run: bash start
#

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export PURPLE_TEAM_HOME="$SCRIPT_DIR"

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Check if setup has been run
if [ ! -d "$SCRIPT_DIR/venv" ] && [ ! -f "$SCRIPT_DIR/config/active/config.yaml" ]; then
    echo -e "${YELLOW}First run detected. Running setup...${NC}"
    bash "$SCRIPT_DIR/setup.sh"
fi

# Launch the platform
echo -e "${GREEN}Starting Purple Team Platform...${NC}"
python3 "$SCRIPT_DIR/bin/purple-launcher" "$@"
